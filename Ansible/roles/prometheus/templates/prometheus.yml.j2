global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets:
{% for host in groups['role_eks-node'] %}
          - '{{ hostvars[host].ansible_host }}:9100'
{% endfor %}

  - job_name: 'kube-state-metrics'
    static_configs:
      - targets:
          - '<your-kube-state-metrics-lb>:8080'
